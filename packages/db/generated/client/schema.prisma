generator client {
  provider = "prisma-client-js"
  output   = "./../generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")

  schemas = ["app"]
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  usd           Decimal   @default(5000)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  Balance       Trade[]

  @@schema("app")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
  @@schema("app")
}

model Trade {
  id         String  @id @default(uuid())
  userId     String
  user       User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  symbol     String
  amount     Decimal
  side       String
  price      Decimal
  quantity   Decimal
  leverage   Decimal
  exposure   Decimal
  stopLoss   Decimal
  takeProfit Decimal

  isClosed   Boolean   @default(false)
  closedAt   DateTime?
  closePrice Decimal?
  pnl        Decimal?

  @@schema("app")
}
